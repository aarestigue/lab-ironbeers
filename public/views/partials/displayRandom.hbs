<div class="card-random">
    <div class="card-randomImg">
        <img id="randomImg" src="{{this.image_url}}" alt="">
    </div>
    <div class="card-beer">
        <h5 class="card-title">{{this.name}}</h5>
        <div class="card-text"> {{this.description}} </div>
        <div class="card-line"> {{this.tagline}} </div>
    
    <div>
    <h3>Food Pairing</h3>

        {{#each this.food_pairing }}
        <li>{{this}}</li>
        {{/each}}
    </div>

    <div>
        <p>
        <b>Brewers tips:</b> {{this.brewers_tips }}
        </p>
    </div>
    </div>
</div>